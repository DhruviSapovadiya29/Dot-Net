@model CoffeeShop.Models.ProductModel;
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Product</h5>

        <!-- Multi Columns Form -->
        <form class="row g-3" method="post" asp-controller="Product" asp-action="SaveProduct">
            <div class="col-md-12">
                <label for="inputName5" class="form-label">Product Name</label>
                <input asp-for="ProductName" type="text" class="form-control" id="inputName5" placeholder="Laptop">
            </div>
            <div class="col-md-6">
                <label for="inputPassword5" class="form-label">Product Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="ProductPrice" type="text" class="form-control" aria-label="Amount (to the nearest dollar)" placeholder="2000">
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="col-md-6">
                <label for="inputEmail5" class="form-label">Product Code</label>
                <input asp-for="ProductCode" type="text" class="form-control" id="inputEmail5" placeholder="abc">
            </div>
            <div class="col-md-6">
                <label for="inputCity" class="form-label">Description</label>
                <input asp-for="Description" type="text" class="form-control" id="inputCity" placeholder="xyz">
            </div>
            <div class="col-md-6">
                <label for="inputState" class="form-label">UserName</label>
                <select asp-for ="UserID" id="inputState" class="form-select">
                    <option selected>Choose...</option>
                    <option>a</option>
                    <option>b</option>
                    <option>c</option>
                    <option>d</option>
                    <option>e</option>
                </select>
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Check me out
                    </label>
                </div>
            </div>
            <div class="text-center">
                <input type="hidden" asp-for="ProductID"/>
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End Multi Columns Form -->

    </div>
</div>