@model CoffeeShop.Models.BillsModel;
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Bills</h5>

        <!-- Multi Columns Form -->
        <form class="row g-3" method="post" asp-controller="Bills" asp-action="SaveBills">
            <div class="col-md-6">
                <label asp-for="BillNumber" for="inputName5" class="form-label">Bill Number</label>
                <input asp-for="BillNumber" type="text" class="form-control" id="inputName5">
            </div>
            <div class="col-md-6">
                <label asp-for="BillDate" for="inputName5" class="form-label">Bill Date</label>
                <input asp-for="BillDate" type="date" class="form-control" id="inputName5">
            </div>
            <div class="col-md-6">
                <label asp-for="OrderID" for="inputState" class="form-label">Order Id</label>
                <select asp-for="OrderID" id="inputState" class="form-select">
                    <option selected>Choose...</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="col-md-6">
                <label asp-for="TotalAmount" for="inputPassword5" class="form-label">Total Amount</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="TotalAmount" type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="col-md-6">
                <label asp-for="Discount" for="inputPassword5" class="form-label">Discount</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="Discount" type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="col-md-6">
                <label asp-for="NetAmount" for="inputPassword5" class="form-label">Net Amount</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="NetAmount" type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="col-md-6">
                <label asp-for="UserID" for="inputState" class="form-label">UserId</label>
                <select asp-for="UserID" id="inputState" class="form-select">
                    <option selected>Choose...</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Check me out
                    </label>
                </div>
            </div>
            <div class="text-center">
                <input type="hidden" asp-for="BillID"/>
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End Multi Columns Form -->

    </div>
</div>
