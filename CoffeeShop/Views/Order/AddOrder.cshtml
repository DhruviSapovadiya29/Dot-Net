@model CoffeeShop.Models.OrderModel;
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Order</h5>

        <!-- Multi Columns Form -->
        <form class="row g-3" method="post" asp-controller="Order" asp-action="SaveOrder">
            <div class="col-md-6">
                <label asp-for="OrderDate" for="inputName5" class="form-label">Order Date</label>
                <input asp-for="OrderDate" type="date" class="form-control" id="inputName5">
            </div>
            <div class="col-md-6">
                <label asp-for="CustomerID" for="inputState" class="form-label">Costomer Id</label>
                <select asp-for="CustomerID" id="inputState" class="form-select">
                    <option selected>Choose...</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="col-md-6">
                <label asp-for="PaymentMode" for="inputName5" class="form-label">Payment Mode</label>
                <input asp-for="PaymentMode" type="text" class="form-control" id="inputName5">
            </div>
            <div class="col-md-6">
                <label asp-for="TotalAmount" for="inputPassword5" class="form-label">Total Amount</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="TotalAmount" type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="col-md-6">
                <label asp-for="ShippingAddress" for="inputAddress5" class="form-label">Shipping Address</label>
                <input asp-for="ShippingAddress" type="text" class="form-control" id="inputAddres5s" placeholder="1234 Main St">
            </div>
            <div class="col-md-6">
                <label asp-for="UserID" for="inputState" class="form-label">User Id</label>
                <select asp-for="UserID" id="inputState" class="form-select">
                    <option selected>Choose...</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Check me out
                    </label>
                </div>
            </div>
            <div class="text-center">
                <input type="hidden" asp-for="OrderID" />
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End Multi Columns Form -->

    </div>
</div>