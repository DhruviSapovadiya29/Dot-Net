@model CoffeeShop.Models.OrderDetailModel;
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Order Detail</h5>

        <!-- Multi Columns Form -->
        <form class="row g-3" method="post" asp-controller="OrderDetail" asp-action="SaveOrderDetail">
            <div class="col-md-6">
                <label asp-for="OrderID" for="inputState" class="form-label">Order ID</label>
                <select asp-for="OrderID" id="inputState" class="form-select">
                    <option selected>Choose...</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="col-md-6">
                <label asp-for="ProductID" for="inputState" class="form-label">Product ID</label>
                <select asp-for="ProductID" id="inputState" class="form-select">
                    <option selected>Choose...</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="col-md-6">
                <label asp-for="Quantity" for="inputPassword5" class="form-label">Quantity</label>
                <input asp-for="Quantity" type="number" class="form-control" id="inputPassword5">
            </div>
            <div class="col-md-6">
                <label asp-for="Amount" for="inputPassword5" class="form-label">Amount</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="Amount" type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="col-md-6">
                <label asp-for="TotalAmount" for="inputPassword5" class="form-label">Total Amount</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="TotalAmount" type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="col-md-6">
                <label asp-for="UserID" for="inputState" class="form-label">User ID</label>
                <select asp-for="UserID" id="inputState" class="form-select">
                    <option selected>Choose...</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Check me out
                    </label>
                </div>
            </div>
            <div class="text-center">
                <input type="hidden" asp-for="OrderDetailID"/>
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End Multi Columns Form -->

    </div>
</div>